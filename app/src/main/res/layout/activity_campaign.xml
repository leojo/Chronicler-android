<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <com.android.chronicler.util.ViewPagerTabs
        android:id="@+id/transactions_pager_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@color/tabs_color"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/product_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="viewPager"
        android:background="@color/fragment_color"
        />

    <!-- Can add android:background="@color/bg_less_bright" to viewpager tabs and viewpager-->
</LinearLayout>

